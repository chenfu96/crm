        version="2.5">


    <welcome-file-list>
           <welcome-file>login.jsp</welcome-file>
           <welcome-file>main.jsp</welcome-file>
        </welcome-file-list>
        <servlet>
           <servlet-name>controllerServlet</servlet-name>
           <servlet-class>cn.nc.crm.controller.ControllerServlet</servlet-class>
